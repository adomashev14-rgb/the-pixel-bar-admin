{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],

    "moduleResolution": "bundler",
    "types": ["node"],

    "outDir": "dist-electron",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["electron/**/*.ts", "electron/**/*.tsx", "electron/**/*.d.ts"]
}
