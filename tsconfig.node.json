{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "typeRoots": [
      "../types",
      "../node_modules/@types"
    ]
  },
  "include": [
    "electron/**/*.ts",
    "types/**/*.d.ts"
  ]
}
