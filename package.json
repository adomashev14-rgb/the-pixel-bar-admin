{
  "name": "the-pixel-bar-admin",
  "version": "1.1.0",
  "description": "Desktop-адмінка The Pixel Bar: керування місцями, бронюванням та звітами.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron .",
    "build:electron": "tsc -p tsconfig.node.json",
    "build": "vite build && npm run build:electron && electron-builder --win --publish never"
  },
  "build": {
    "appId": "com.pixelbar.admin",
    "productName": "Pixel Bar Manager",
    "files": [
      "dist/**",
      "dist-electron/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "conf": "^12.0.0",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "xlsx": "^0.18.5",
    "react-big-calendar": "^1.8.2",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
