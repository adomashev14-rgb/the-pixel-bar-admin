{
  "name": "the-pixel-bar-admin",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "tsc -p tsconfig.node.json",
    "build": "vite build && npm run build:electron && electron-builder --win --publish never",
    "start": "electron ."
  },
  "build": {
    "appId": "com.thepixelbar.manager",
    "productName": "Pixel Bar Manager",
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "electron-store": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-big-calendar": "^1.8.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.1.4",
    "@vitejs/plugin-react": "^4.3.2",
    "wait-on": "^7.2.0"
  }
}
